<% title "My Time" %>

<div class="block" id="block-tables">
	<div class="secondary-navigation">
    	<ul>
			<%= render :partial => 'submenu' %>
			<%# yield :submenu %>
    	</ul>
    	<div class="clear"></div>
  	</div>
	<div class="content">
		<h2 class="title">Today is <%= Time.now.strftime("%B #{Time.now.day.ordinalize}") %></h2>
    	<div class="inner">

			<%= link_to_remote @date.last_month.strftime('%B'), :update => "calendar", :url => { :action => "index", :date => @date.last_month.strftime("%Y-%B") } -%>
			<%# = link_to @date.last_month.strftime('%B'), url_for (:overwrite_params => { :date => @date.last_month.strftime("%Y-%B")}) %>
			<%= link_to "Today", url_for (:overwrite_params => { :date => Date.today}) %>
			<%= link_to @date.next_month.strftime('%B'), url_for (:overwrite_params => { :date => @date.next_month.strftime("%Y-%B")}) %>

			<div id="calendar">
				<%= render :partial => "calendar" -%>
			</div>

			<div class="clear"></div>

			<h2>Activities for this day</h2>
			
			<div id="activities">
			</div>
			
			<div class="clear"></div>			
			
    	</div>
	</div>
</div>
